                        <defs>
                            <style>.arrowLine{fill:none;stroke:#FFF;stroke-width:1px;transition: 0.25s ease;}</style>
                        </defs>
                        <polyline class="arrowLine" points="0.71 13.26 12.56 1.41 24.16 13.02"/>
